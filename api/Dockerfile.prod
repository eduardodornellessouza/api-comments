# Dockerfile.prod
FROM node:20-slim

# Instala dependências para compilar módulos nativos
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY package*.json ./

# Instala dependências e compila sqlite3
RUN npm ci --omit=dev && npm rebuild sqlite3

COPY . .

EXPOSE 3000

CMD ["node", "index.js"]

